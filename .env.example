# Discord Konfiguration
# Discord Bot Token (von https://discord.com/developers/applications)
DISCORD_TOKEN=dein_discord_bot_token_hier

# Discord Server (Guild) ID
DISCORD_GUILD_ID=deine_server_id_hier

# Optional: Specific Channel ID für Tests
DISCORD_CHANNEL_ID=

# ====================================================================
# LLM Konfiguration (Flexibel: OpenAI, Groq, Gemini, Ollama)
# ====================================================================

# LLM Provider auswählen: openai, groq, gemini, ollama
LLM_PROVIDER=gemini

# LLM Model (abhängig vom Provider)
# - OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo
# - Groq: llama-3.3-70b-versatile, mixtral-8x7b-32768
# - Gemini: gemini-2.5-flash, gemini-2.5-pro, gemini-2.0-flash-exp
# - Ollama: llama3.2, mistral, qwen2.5 (muss lokal installiert sein)
LLM_MODEL=gemini-2.5-flash

# API Keys (je nach Provider benötigt)
# OpenAI API Key (von https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Groq API Key (von https://console.groq.com/keys)
GROQ_API_KEY=

# Gemini API Key (von https://ai.google.dev/)
GEMINI_API_KEY=dein_gemini_api_key_hier

# Ollama benötigt keinen API Key (läuft lokal)
# Installation: https://ollama.com/

# ====================================================================
# Legacy Support (wird ignoriert wenn LLM_PROVIDER gestzt ist)
# ====================================================================
# GEMINI_MODEL wird nur genutzt wenn LLM_MODEL nicht gesetzt ist
GEMINI_MODEL=

# MCP Konfiguration
# Mode: subprocess (empfohlen) oder remote
MCP_MODE=subprocess

# Nur für MCP_MODE=remote
MCP_SERVER_URL=

# App Konfiguration
DEBUG_MODE=false
LOG_LEVEL=INFO

# Voice Konfiguration
VOICE_LANGUAGE=de-DE
ENABLE_TTS=false
